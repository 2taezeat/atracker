<?xml version="1.0" encoding="utf-8"?>
<layout>


    <data>
        <variable
            name="signUpVM"
            type="com.example.atracker.ui.signUp.SignUpViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/signUpCompleteMainCL"
            >


            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.32"
                android:id="@+id/signUpCompleteLogoIV"
                >
            </ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signUpCompleteText1"
                android:text="@string/sign_up_complete_title"
                android:textSize="16sp"
                android:textColor="@color/atracker_gray_2"
                app:layout_constraintTop_toBottomOf="@+id/signUpCompleteLogoIV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="140dp"
                >

            </TextView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/signUpCompleteText1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:id="@+id/signUpCompleteCL1"



                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/signUpCompleteNickNameTV"
                    android:text=""
                    android:textSize="26sp"
                    android:textColor="@color/atracker_white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/signUpCompleteText3"
                    >
                </TextView>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/signUpCompleteText3"
                    android:text="@string/sla_title"
                    android:textSize="26sp"
                    android:textColor="@color/atracker_white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/signUpCompleteNickNameTV"
                    app:layout_constraintEnd_toEndOf="parent"
                    >
                </TextView>


            </androidx.constraintlayout.widget.ConstraintLayout>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signUpCompleteText2"
                android:text="@string/sign_up_complete_welcome"
                android:textSize="26sp"
                android:textColor="@color/atracker_white"
                app:layout_constraintTop_toBottomOf="@+id/signUpCompleteCL1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

            </TextView>








        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
