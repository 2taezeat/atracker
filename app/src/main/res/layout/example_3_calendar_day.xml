<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/exThreeDayText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        tools:text="22"

        />

    <View
        android:id="@+id/exThreeDotView1"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/example_3_today_bg_1"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exThreeDayText"
        />


    <View
        android:id="@+id/exThreeDotView2"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/example_3_today_bg_2"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/exThreeDotView1"
        app:layout_constraintTop_toBottomOf="@+id/exThreeDayText"

        />


    <View
        android:id="@+id/exThreeDotView3"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/example_3_today_bg_3"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/exThreeDotView2"
        app:layout_constraintTop_toBottomOf="@+id/exThreeDayText"

        />


</androidx.constraintlayout.widget.ConstraintLayout>

