<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/signUpTermsMainCL"
            >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_back_icon_raw"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:id="@+id/signUpTermsBackIV"
                >
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signUpTermsText1"
                android:text="@string/service_term_confirm_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="20sp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="56dp"
                android:textColor="@color/atracker_white"
                >

            </TextView>


            <CheckBox
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@+id/signUpTermsText1"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/signUpTermsTotalCheckBox"
                android:layout_marginTop="28dp"
                android:layout_marginStart="28dp"
                android:button="@drawable/custom_checkbox_2"

                >

            </CheckBox>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/signUpTermsText1"
                app:layout_constraintStart_toEndOf="@+id/signUpTermsTotalCheckBox"
                android:text="@string/terms_total_confirm_title"
                android:layout_marginTop="28dp"
                android:textSize="16sp"
                android:textColor="@color/atracker_white"
                android:textStyle="bold"
                android:layout_marginStart="6dp"
                >

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/signUpTermsTotalCheckBox"
                android:background="@color/atracker_gray_7"
                android:id="@+id/signUpTermsView1"
                android:layout_marginTop="16dp"
                >
            </View>


            <CheckBox
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@+id/signUpTermsView1"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/signUpTermsServiceCheckBox"
                android:layout_marginTop="16dp"
                android:layout_marginStart="28dp"
                android:button="@drawable/custom_checkbox_2"
                >

            </CheckBox>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/signUpTermsView1"
                app:layout_constraintStart_toEndOf="@+id/signUpTermsTotalCheckBox"
                android:text="@string/terms_service_confirm_title"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/atracker_white"
                android:layout_marginStart="6dp"

                >

            </TextView>


            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:layout_constraintTop_toBottomOf="@+id/signUpTermsView1"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_left_icon_raw"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="22dp"
                android:id="@+id/signUpTermsServiceIV"
                >
            </ImageView>






            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/signUpTermsServiceCheckBox"
                android:background="@color/background_light_gray"
                android:id="@+id/signUpTermsView2"
                android:layout_marginTop="16dp"
                >
            </View>



            <CheckBox
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@+id/signUpTermsView2"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/signUpTermsPrivacyCheckBox"
                android:layout_marginTop="16dp"
                android:layout_marginStart="28dp"
                android:button="@drawable/custom_checkbox_2"
                >

            </CheckBox>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/signUpTermsView2"
                app:layout_constraintStart_toEndOf="@+id/signUpTermsTotalCheckBox"
                android:text="@string/terms_privacy_title"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/atracker_white"
                android:layout_marginStart="6dp"
                >

            </TextView>


            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:layout_constraintTop_toBottomOf="@+id/signUpTermsView2"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_left_icon_raw"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="22dp"
                android:id="@+id/signUpTermsPrivacyIV"
                >
            </ImageView>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/signUpTermsPrivacyCheckBox"
                android:background="@color/background_light_gray"
                android:id="@+id/signUpTermsView3"
                android:layout_marginTop="16dp"
                >
            </View>



            <CheckBox
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@+id/signUpTermsView3"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/signUpTermsMarketingCheckBox"
                android:layout_marginTop="16dp"
                android:layout_marginStart="28dp"
                android:button="@drawable/custom_checkbox_2"
                >

            </CheckBox>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/signUpTermsView3"
                app:layout_constraintStart_toEndOf="@+id/signUpTermsTotalCheckBox"
                android:text="@string/terms_marketing_title"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/atracker_white"
                android:layout_marginStart="6dp"
                >

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/signUpTermsMarketingCheckBox"
                android:background="@color/background_light_gray"
                android:id="@+id/signUpTermsView4"
                android:layout_marginTop="16dp"
                >
            </View>






            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center"
                android:text="@string/confirm_title"
                android:textColor="@color/atracker_gray_3"
                android:textSize="16sp"
                android:id="@+id/signUpTermsNext"
                android:enabled="false"
                >
            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                app:layout_constraintBottom_toTopOf="@+id/signUpTermsNext"
                android:background="@drawable/bottom_shadow"
                >
            </View>




        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
