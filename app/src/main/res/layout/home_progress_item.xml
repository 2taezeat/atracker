<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeProgressItemMainCL"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="18dp"
            android:id="@+id/homeProgressCompanyTitleTV"
            android:text="123123123"
            android:layout_marginStart="12dp"
            android:textSize="14dp"
            android:textColor="@color/atracker_white"
            >

        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintStart_toEndOf="@+id/homeProgressCompanyTitleTV"
            android:id="@+id/homeProgressjobTypeTV"
            android:text="1345345345"
            android:layout_marginStart="14dp"
            android:textSize="12dp"
            android:textColor="@color/atracker_gray_1"
            >

        </TextView>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="@drawable/edge_grey_progress_bar"
            app:layout_constraintWidth_percent="0.94"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeProgressjobTypeTV"
            android:layout_marginTop="10dp"
            android:id="@+id/homeMainProgressBar"
            android:secondaryProgress="3"
            android:max="4"
            android:layout_marginBottom="20dp"
            >
        </ProgressBar>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/background_gray"

            >


        </View>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>