<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/signUpNickNameMainCL"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signUpNickNameText1"
                android:text="어떤 포지션으로 취업하고 싶으신가요?"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="20sp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="56dp"
                android:textColor="@color/atracker_white"
                >

            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signUpNickNamePosition"
                android:text="@string/position_title"
                app:layout_constraintTop_toBottomOf="@+id/signUpNickNameText1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="28dp"
                android:layout_marginTop="35dp"
                android:textSize="14sp"
                android:textColor="@color/atracker_gray_3"
                >

            </TextView>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/signUpNickNamePosition"
                app:layout_constraintStart_toStartOf="parent"
                android:hint="@string/add_apply_hint"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:id="@+id/signUpNickNamePositionET"
                android:background="@null"
                android:textColorHint="@color/atracker_gray_6"
                android:textColor="@color/atracker_white"
                android:theme="@style/MyEditTextTheme"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                >

            </EditText>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/signUpNickNamePositionET"
                android:layout_marginTop="5dp"
                android:background="@color/atracker_gray_4"
                android:id="@+id/signUpNickNameView1"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                >
            </View>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signUpNickNameCareerAge"
                android:text="@string/career_age_title"
                app:layout_constraintTop_toBottomOf="@+id/signUpNickNameView1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="28dp"
                android:layout_marginTop="38dp"
                android:textSize="14sp"
                android:textColor="@color/atracker_gray_3"
                >

            </TextView>


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@+id/signUpNickNameCareerAge"
                app:layout_constraintStart_toStartOf="parent"
                android:spinnerMode="dropdown"
                android:layout_marginTop="10dp"
                android:id="@+id/signUpNickNameCareerAgeSpinner"
                android:background="@drawable/spinner_background"
                android:popupBackground="@drawable/button_round"
                android:overlapAnchor="false"
                android:paddingBottom="2dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                >
            </Spinner>

            <ImageView
                android:layout_marginTop="18dp"
                android:layout_width="14dp"
                android:layout_height="14dp"
                app:layout_constraintTop_toBottomOf="@+id/signUpNickNameCareerAge"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_down_icon_raw"
                android:layout_marginEnd="32dp"
                >
            </ImageView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center"
                android:text="@string/next_title"
                android:textColor="@color/progress_color_7"
                android:textSize="16sp"

                >


            </TextView>




        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
