<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_blog"
        android:name="com.example.atracker.ui.blog.BlogDisplayFragment"
        android:label="@string/title_blog"
        tools:layout="@layout/fragment_blog_display" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.atracker.ui.home.HomeDisplayFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home_display" />


    <fragment
        android:id="@+id/navigation_calendar"
        android:name="com.example.atracker.ui.calendar.CalendarDisplayFragment"
        android:label="@string/title_calendar"
        tools:layout="@layout/fragment_calendar_display" />
</navigation>