<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cmc.atracker">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_atracker_foreground"
        android:label="@string/app_name_korean"
        android:roundIcon="@mipmap/ic_launcher_atracker_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Atracker"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:name="com.cmc.atracker.model.local.App"
        >
        <activity
            android:name="com.cmc.atracker.ui.signUp.SignUpActivity"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|uiMode"
            android:exported="false" />
        <activity
            android:name="com.cmc.atracker.ui.SplashActivity"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|uiMode"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cmc.atracker.ui.login.LoginActivity"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|uiMode"
            android:exported="false">

        </activity>
        <activity
            android:name="com.cmc.atracker.ui.MainActivity"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|uiMode"
            android:exported="true"
            android:label="@string/app_name">

        </activity>
    </application>

</manifest>